datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  phone     String?
  address   String?
  bloodType String?
  userType  UserType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserType {
  DONOR
  BLOOD_BANK
  ADMIN
}
